<div class="col">
  <h2>Login</h2>
  <div>
    <p>If you used an email address other gmail then go ahead and complete the form below</p>
    <p>Otherwise just
      <%= link_to auth_google_oauth2_url, class: 'btn btn-light', title: 'Login with google' do %>
          <%= faw_icon 'brand', 'google' %>
          Login with google
      <% end %>
    </p>
    <%= form_tag(login_send_magic_link_path, id: 'magicForm') do %>
        <div class="field">
          <label for="email">Email *</label>
          <input type="email" id="email" name="email" required />
        </div>

        <div class="actions">
          <input type="submit" value="Get magic link" />
        </div>
    <% end %>
  </div>
</div>
