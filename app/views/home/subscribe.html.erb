<div class="col-12 col-md-8 col-lg-6 mx-auto">
  <div class="card shadow-sm border-0 rounded-lg">
    <div class="card-header">
      <h2 class="h4 mb-0">Subscribe</h2>
    </div>
    <div class="card-body p-4">
      <p class="text-muted mb-4">Enter your details below for your daily XKCD fix.</p>

      <%= form_with(model: @subscriber, local: true, url: home_do_subscribe_path, html: {id: "subscribeForm"}) do |form| %>
        <div class="form-group mb-3">
          <%= form.label :firstname, class: "form-label" %>
          <%= form.text_field :firstname, id: :subscriber_firstname, class: "form-control", placeholder: "Your first name", required: true %>
        </div>

        <div class="form-group mb-4">
          <%= form.label :email, class: "form-label" %>
          <%= form.email_field :email, id: :subscriber_email, class: "form-control", placeholder: "your.email@example.com", required: true %>
        </div>

        <div class="d-grid">
          <%= form.submit "Subscribe Now", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
    </div>
    <div class="card-footer bg-light text-center py-3">
      <small class="text-muted">Already subscribed? <a href="<%= login_show_path %>">Login here</a></small>
    </div>
  </div>
</div>
