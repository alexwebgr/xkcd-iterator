<% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %> alert-dismissible fbs-alert-fixed animate fadeOut" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <% if message.instance_of? ActiveModel::Errors %>
      <ul>
        <% message.full_messages.each do |item| %>
          <li><%= item %></li>
        <% end %>
      </ul>
    <% else %>
      <%= message %>
    <% end %>
  </div>
<% end %>
