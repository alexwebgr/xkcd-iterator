<h1>Comics</h1>

<table>
  <thead>
    <tr>
      <th>Num</th>
      <th>Title</th>
      <th>Safe title</th>
      <th>Img url</th>
      <th>Alt text</th>
      <th>Day</th>
      <th>Month</th>
      <th>Year</th>
      <th>Transcript</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comics.each do |comic| %>
      <tr>
        <td><%= comic.num %></td>
        <td><%= comic.title %></td>
        <td><%= comic.safe_title %></td>
        <td><%= comic.img_url %></td>
        <td><%= comic.alt_text %></td>
        <td><%= comic.day %></td>
        <td><%= comic.month %></td>
        <td><%= comic.year %></td>
        <td><%= comic.transcript %></td>
        <td><%= link_to 'Show', comic %></td>
        <td><%= link_to 'Edit', edit_comic_path(comic) %></td>
        <td><%= link_to 'Destroy', comic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

